function parseUrl(url){var urlArr=url.split("/");if(urlArr.indexOf("articles")!=-1){urlArr.splice(urlArr.indexOf("articles"));}
if(urlArr.indexOf("category")!=-1){urlArr.splice(urlArr.indexOf("category"),1);}
for(var i=1;i<urlArr.length;i++){$(".accordion li").each(function(idx,li){if($(li).find("a").data("category-name")==urlArr[i]){$(li).addClass("active");$(".category-title").html($(li).find("a").html());}});}}
$(document).ready(function(){parseUrl(window.location.pathname);var firstCat=$(".accordion-right li:first-child");firstCat.find("ul").slideDown();firstCat.addClass("active");$(".accordion-right li span").on("click",function(){if($(this).parent().hasClass("active")){$(this).parent().find("ul").slideUp();$(this).parent().removeClass("active");}else{$(this).parent().find("ul").slideDown();$(this).parent().addClass("active");}});$(".article-content").on("click",".content img",function(){$("body").css("overflow","hidden");$("#img_modal").css("display","flex");$("#img_modal").css("align-items","center");$("#light_image").attr("src",$(this).attr("src"));});$(".article-content").on("click",".close",function(){$("body").css("overflow","auto");$("#img_modal").hide();$("#notify_modal").hide();});$(".article-content .modal").click(function(e){if(e.target!==e.currentTarget)return;$("body").css("overflow","auto");$("#img_modal").hide();$("#notify_modal").hide();});$(".article-content .modal-content.image-content").click(function(e){e.stopPropagation();});$(document).keyup(function(e){if(e.keyCode==27){$("body").css("overflow","auto");$("#img_modal").hide();$("#notify_modal").hide();}});});function openNav(){$(".faq-list-container .four").show();}
function closeNav(){$(".faq-list-container .four").hide();}